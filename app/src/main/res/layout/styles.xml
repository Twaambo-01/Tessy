<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <style android:name="RoomButton">
        <item android:name="android:layout_width">0dp</item>
        <item android:name="android:layout_height">wrap_content</item>
        <item android:name="android:layout_columnWeight">1</item>
        <item android:name="android:textColor">#000</item>
        <item android:name="android:background">@drawable/room_button_bg</item>
        <item android:name="android:textStyle">bold</item>
        <item android:name="android:padding">12dp</item>
    </style>

    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- When pressed -->
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="#FF7B9C"/>
                <corners android:radius="16dp"/>
            </shape>
        </item>

        <!-- When selected -->
        <item android:state_selected="true">
            <shape android:shape="rectangle">
                <solid android:color="#FF7B9C"/>
                <corners android:radius="16dp"/>
            </shape>
        </item>

        <!-- Default -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#FFC0CB"/>
                <corners android:radius="16dp"/>
            </shape>
        </item>
    </selector>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <solid android:color="#F4A8B7"/>
        <corners android:radius="25dp"/>
    </shape>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">
        <solid android:color="#FFFFFF"/>
        <corners android:radius="12dp"/>
        <stroke android:width="1dp" android:color="#CCC"/>
    </shape>

</LinearLayout>